{% import "utils.njk" as utils%}
{%extends "layouts/base.njk"%}

{% set isHome = true %}

{% block content %}
    <ul role="list" class="projectsList region" data-justify="center" style="--region-space:var(--space-xl)">
        {% for project in collections.projects | favor_lang | sort_by_priority %}
            <li>
                <a href="{{ project.url }}" class="projectCard">
                    {% image_by_height project.data.thumbnail.src, project.data.thumbnail.alt, 240 %}
                    <span class="projectCard_title bold text-xl">{{ utils.splitLetters(project.data.title) }}</span>
                </a>
            </li>
        {% endfor %}
        {% for project in collections.projects | favor_lang  %}
            <li>
                <a href="{{ project.url }}" class="projectCard">
                    {% image_by_height project.data.thumbnail.src, project.data.thumbnail.alt, 240, true %}
                    <span class="projectCard_title bold text-xl">{{ utils.splitLetters(project.data.title) }}</span>
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock content %}
