{% extends "layouts/base.njk" %}

{% block content %}
    <article class=" region" style="--region-space-start:0;">
        {% if cover and cover.src %}
            <div class="cover">
                {% image cover.src, cover.alt, [300,600,800,1000,1500], "(max-width:30rem) 100vw, (max-width:96rem) 75vw, 1536px", false %}
            </div>
        {% endif %}
        <div class="projectHeader region" style="--region-space-start:var(--space-l); --region-space-end:var(--space-l);">
            <div class="projectHeader_infos flow">
                <div>
                    {% if title %}
                        <h1 class="text-lg bold">{{title}}</h1>
                    {% endif %}
                    {% if moment %}
                        <p class="bold">{{moment}}</p>
                    {% endif %}
                </div>
                {% if legend %}
                    <div class="italic text-sm prose">{{legend | parse_markdown | safe }}</div>
                {% endif %}
            </div>
            {% if description %}
                <div class="projectHeader_resume prose flow">
                    {{ description | parse_markdown | safe}}
                </div>
            {% endif %}
        </div>
        <div class="prose flow" style="--flow-space:var(--space-l)">
            {{content | safe}}
        </div>
    </article>
{% endblock content %}