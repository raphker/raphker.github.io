{% import "utils.njk" as utils %}
<!DOCTYPE html>
<html lang="{{ page.lang }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Raph</title>
        <link rel="stylesheet" href="/styles/index.css">
    </head>
    <body data-barba="wrapper">
        <div data-barba="container">
            <header>
                <div class="wrapper" data-type="wide">
                    <a href="/" class="bold text-lg">{{ config.title }}</a>
                    <nav class="nav--desktop">
                        <ul role="list">
                            {% for item in collections.page | favor_lang | sort_by_priority%}
                                <li>
                                    <a href="{{ item.url }}"  aria-current={{"page" if page.url == item.url else "false" }}>
                                        {{utils.splitLetters(item.data.title)}}
                                        <span class="clone" aria-hidden="true">{{utils.splitLetters(item.data.title)}}</span>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </nav>
                    <nav class="nav--mobile">
                        <c-hamburger>
                            <button aria-expanded="false">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 25 25" stroke-width="1.5" stroke-linecap="round" stroke="currentColor" width="1em" height="1em">
                                    <line x1="3.75" y1="5.75" x2="20.25" y2="5.75"/>
                                    <line x1="3.75" y1="11.75" x2="20.25" y2="11.75"/>
                                    <line x1="3.75" y1="17.75" x2="20.25" y2="17.75"/>
                                </svg>
                            </button>
                            <ul role="list">
                                {% for item in collections.page | favor_lang | sort_by_priority%}
                                    <li style="--index:{{ loop.index }};">
                                        <a href="{{ item.url }}" aria-current={{"page" if page.url == item.url else "false" }}>{{ utils.splitLetters(item.data.title) }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </c-hamburger>
                    </nav>
                </div>
            </header>
            <c-sinwave>
                <svg viewBox="0 0 300 10" xmlns="http://www.w3.org/2000/svg">
                    {# mask before wave #}
                    <path class="shape" d="M-300 5 H 80 V 0 h -380 z"/>
                    {# stroke before inter #}
                    <path class="stroke" d="M-300 5 L 8 5 "/>
                    {# stroke after inter #}
                    <path class="stroke desktopOnly" d="M18 5 L 80 5 "/>
                    <path class="stroke mobileOnly" d="M30 5 L 80 5 "/>
                    {# circles of inter #}
                    <circle cx="8" cy="5" r=".6" stroke="currentColor" fill="currentColor"/>

                    <circle cx="18" cy="5" r=".6" stroke="currentColor" fill="currentColor" class="desktopOnly"/>
                    <circle cx="30" cy="5" r=".6" stroke="currentColor" fill="currentColor" class="mobileOnly"/>
                    {# inter line #}
                    <path d="M8 5 L 18 5" class="stroke inter desktopOnly"/>
                    <path d="M8 5 L 30 5" class="stroke inter mobileOnly"/>
                    {# mask wave #}
                    <path class="shape" d="M80 5 L300 5 V0 H80z" id="waveShape"/>
                    {# stroke wave #}
                    <path class="stroke" d="M80 5 L300 5" id="waveStroke"/>
                </svg>
            </c-sinwave>

            <main class="wrapper flow">
                {% block content %}
                {% endblock content %}
            </main>
            <footer class="footer wrapper" data-type="wide">
                <p class="footer_copyright">{{config.copyright}}</p>
                {% if page.url | locale_links | length %}
                    <ul role="list" class="footer_languages">
                        {% for link in page.url | locale_links %}
                            {%- if not loop.first %},{% endif %}
                            <li>
                                <a href="{{link.url}}" lang="{{link.lang}}" hreflang="{{link.lang}}">{{link.label}}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </footer>
        </div>
    </body>

    <script src="/scripts/index.js"></script>
</html>